pipeline {
    agent any

    stages {

        stage('Checkout') {
            steps {
                echo "Pulling code from GitHub"
                git branch: 'main', url: 'https://github.com/muddasir-x/for-my-jenkins.git'
            }
        }

        stage('Test') {
            steps {
                echo "Running basic HTML validation"
                // simple check for unclosed <h1> tags
                sh '''
                grep -q "<h1>.*</h1>" index.html || echo "Warning: possible HTML tag issue"
                '''
            }
        }

        stage('Deploy') {
            steps {
                echo "Deploying HTML to Nginx container"

                sh '''
                # Stop old container if exists
                docker rm -f html-site 2>/dev/null || true

                # Run Nginx container with code mounted
                docker run -d \
                    --name html-site \
                    -p 8081:80 \
                    -v $PWD:/usr/share/nginx/html:ro \
                    nginx:latest
                '''
            }
        }
    }
}
